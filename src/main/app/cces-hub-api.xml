    </flow>
    <flow name="post:/Grades/IF-grades-3:application/json:cces-hub-api-config">
        <set-payload value="{&#xA;   &quot;functionality&quot;:&quot;Student Grades&quot;,&#xA;   &quot;method&quot;:&quot;Submit-Student-Grades&quot;,&#xA;   &quot;verb&quot;:&quot;POST&quot;,&#xA;   &quot;status&quot;:&quot;ACK&quot;,&#xA;   &quot;Transaction_Id&quot;:&quot;1122334455&quot;,&#xA;   &quot;confirmationId&quot;:&quot;123ZULU321&quot;&#xA;}" doc:name="Set Payload"/>
    </flow>
</mule>
